{% extends 'base.html.twig' %}
{% block body %}
    <h1>Article list</h1>
    <table>
        <tr style="font-weight: bold">
            <td>UUID</td>
            <td>|</td>
            <td>Title</td>
            <td>|</td>
            <td>URL slug</td>
            <td>|</td>
        </tr>
        {% for article in articles if articles %}
            <tr>
                <td>{{article.id}}</td>
                <td>|</td>
                <td>{{article.title}}</td>
                <td>|</td>
                <td>{{article.slug}}</td>
                <td>|</td>
                <td><a href="{{path('gui__admin_article_edit', {'slug': article.slug})}}">Edit</a></td>
                <td>|</td>
                <td><a href="{{path('gui__admin_article_delete', {'slug': article.slug})}}">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{path('gui__admin_article_add')}}">Add article</a>
{% endblock %}
